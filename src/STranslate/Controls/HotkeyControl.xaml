<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:control="clr-namespace:STranslate.Controls"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">

    <Style TargetType="{x:Type control:HotkeyControl}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:HotkeyControl}">
                    <ui:ElevationBorder
                        x:Name="PART_ButtonBorder"
                        Padding="5,0"
                        Background="{DynamicResource ButtonBackground}"
                        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <ItemsControl x:Name="PART_ItemsHost">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        x:Name="PART_InnerBorder"
                                        Margin="2,5"
                                        Padding="10,5"
                                        Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <TextBlock Foreground="{DynamicResource TextFillColorInverseBrush}" Text="{Binding}" />
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type control:HotkeyControl}}, Path=IsMouseOver}" Value="True">
                                            <Setter TargetName="PART_InnerBorder" Property="Background" Value="{DynamicResource SystemAccentColorLight1Brush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type control:HotkeyControl}}, Path=IsPressed}" Value="True">
                                            <Setter TargetName="PART_InnerBorder" Property="Background" Value="{DynamicResource SystemAccentColorDark1Brush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type control:HotkeyControl}}, Path=IsRegistered}" Value="True">
                                            <Setter TargetName="PART_InnerBorder" Property="Background" Value="{DynamicResource {x:Static ui:ThemeKeys.InvalidBrushKey}}" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ui:ElevationBorder>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_ButtonBorder" Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_ButtonBorder" Property="Background" Value="{DynamicResource ButtonBackgroundPressed}" />
                            <Setter TargetName="PART_ButtonBorder" Property="BorderBrush" Value="{DynamicResource ButtonBorderBrushPressed}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>